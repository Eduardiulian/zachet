<%= form_for(:session, url: session_create_url, method: :post, local:true) do |f| %>
<main role="main" class="flex-shrink-0" >
  <div class="container">
    <div class="row">
      <div class="col-9" style='position: absolute; left: 80px;'>
        <h2 class='title inline' colspan='2' style='margin-top: 20px;'><%= t("lables.login") %></h2>
        <table>
          <tbody>
          <tr>
            <td><%= t("fields.username") %></td>
            <td>
              <%= f.text_field :username, required: true, label: 'username' %>
            </td>
          </tr>
          <tr>
            <td><%= t("fields.password") %></td>
            <td>
              <%= f.password_field :password, required: true, label: 'password' %>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <%= f.submit t("buttons.login") %>
            </td>
          </tr>
          </tbody>
        </table>
        <div style="margin-top: 16px;">
          <%= link_to t("links.to_registrate"), new_user_path %>
        </div>

      </div>
      <div class="col-3 tags" style='position: absolute; right: 0;'>
<!--        hello-->
      </div>
    </div>
  </div>
</main>
