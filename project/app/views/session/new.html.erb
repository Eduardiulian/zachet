<%= form_with url: session_create_url, method: :post, local:true do |f| %>
<main role="main" class="flex-shrink-0" >
  <div class="container">
    <div class="row">
      <div class="col-9" style='position: absolute; left: 80px;'>
        <h2 class='title inline' colspan='2' style='margin-top: 20px;'>Log in</h2>
        <table>
          <tbody>
          <tr>
            <td>Login</td>
            <td>
              <%= f.text_field :username, required: true, label: 'username' %>
            </td>
          </tr>
          <tr>
            <td>Password</td>
            <td>
              <%= f.password_field :password, required: true, label: 'password' %>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <%= f.submit 'log in' %>
            </td>
          </tr>
          </tbody>
        </table>
        <div style="margin-top: 16px;">
          <%= link_to 'New here?', new_user_path %>
        </div>

      </div>
      <div class="col-3 tags" style='position: absolute; right: 0;'>
<!--        hello-->
      </div>
    </div>
  </div>
</main>
<% end %>