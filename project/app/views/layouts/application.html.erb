<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'contacts', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap' %>

    <script>
        function show(username)
        {
            document.getElementById(username.id).style.visibility = "visible";
        }
    </script>

    <style>
        body{
            font-family: 'Montserrat', sans-serif;
        }
        .navbar-default {
             color: #bbdefb;
             background-color: #bbdefb;
             border-color: #bbdefb;
         }
        .navbar-brand{
            font-size: 32px;
            color: #212121;
        }

        .inline{
            display: inline-block;
            vertical-align: middle;
        }

        .block{
            display: block;
        }

        .card{
            background-color: #e3e3e3;
        }

        .profile_page{
            margin-left: auto;
            margin-right: auto;
            width: 24em
        }
    </style>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
